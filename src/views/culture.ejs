            <div class="h-48 bg-cover bg-center" style="background-image: url('image2.jpg');"></div>
            <div class="h-48 bg-cover bg-center" style="background-image: url('image3.jpg');"></div>
            <div class="h-48 bg-cover bg-center" style="background-image: url('image4.jpg');"></div>
            <div class="h-48 bg-cover bg-center" style="background-image: url('image5.jpg');"></div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="text-center py-6 mt-8 border-t border-white">
        <p>&copy; 2024 संस्कृति और त्योहार. सभी अधिकार सुरक्षित।</p>
    </footer>
</body>
